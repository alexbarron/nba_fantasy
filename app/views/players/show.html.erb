<h1><%= @player.name %>(<%= @player.position %>)</h1>
<h3>Score: <%= @player.score %></h3>
<p>Salary: <%= number_to_currency(@player.salary, precision: 0) %></p>
<p>Score Per Million: <%= @player.value %></p>
<p>Num of Teams: <%= pluralize(@player.teams.count, 'team') %></p>

<table class="table table-striped table-condensed">
  <tr>
    <th>Points</th>
    <th>Assists</th>
    <th>Rebounds</th>  
    <th>Blocks</th>
    <th>Steals</th>
    <th>Games Played</th>
  </tr>
  <tr>
    <td><%= @player.points %></td>
    <td><%= @player.assists %></td>
    <td><%= @player.rebounds %></td>
    <td><%= @player.blocks %></td>
    <td><%= @player.steals %></td>
    <td><%= @player.games_played %></td>
  </tr>
</table>

<%= permitted_links(@player) %>