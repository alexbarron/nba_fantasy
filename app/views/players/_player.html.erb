<tr>
<th><%= link_to player.name, player %></th>
<th><%= player.position %></th>
<th><%= player.score %></th>
<th><%= number_to_currency(player.salary, precision: 0) %></th>
<th><%= player.value %></th>
<% if !current_user || current_user.team.players.include?(player) %>
  <th>This player is on your team</th>
<% else %>
  <th><%= link_to "Add Player", roster_spots_path(player_id: player.id), method: :post, class: "btn btn-success btn-xs" %></th>
<% end %>
</tr>